// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id              Int               @id @default(autoincrement())
  projectId       String
  name            String
  job             String
  title           String
  status          String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  texts           TextNode[]
  banners         BannerNode[]
  projectSettings ProjectSettings[]
}

model TextNode {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  elementId String
  name      String
  type      String
  locked    Boolean
  display   Boolean
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BannerNode {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  elementId String
  name      String
  type      String
  locked    Boolean
  display   Boolean
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectSettings {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  scale     Float
  positionX Int
  positionY Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
