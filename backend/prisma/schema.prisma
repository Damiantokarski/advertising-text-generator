// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id              String            @id @default(cuid())
  name            String
  job             String
  title           String
  status          String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  texts           Text[]
  templates       Template[]
  projectSettings ProjectSettings[]
  user            User?             @relation(fields: [userId], references: [id])
  userId          Int?
}

model Text {
  id        String   @unique
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  type      String
  locked    Boolean
  display   Boolean
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Template {
  id        String   @unique
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  type      String
  locked    Boolean
  display   Boolean
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectSettings {
  id        Int      @id @default(autoincrement())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  scale     Float
  positionX Int
  positionY Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  projects  Project[]
  createdAt DateTime  @default(now())
  sessions  Session[]
}

enum Role {
  USER
  ADMIN
}
